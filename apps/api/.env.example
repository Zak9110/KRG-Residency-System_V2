# ===================================================================
# KRG e-Visit System - Environment Variables
# ===================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# ===================================================================

# -------------------------------------------------------------------
# DATABASE
# -------------------------------------------------------------------
DATABASE_URL="file:./dev.db"

# -------------------------------------------------------------------
# API SERVER
# -------------------------------------------------------------------
PORT=3001
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# -------------------------------------------------------------------
# SUPABASE STORAGE (File Uploads)
# -------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# -------------------------------------------------------------------
# WHATSAPP BUSINESS API
# -------------------------------------------------------------------
# Option 1: Twilio WhatsApp (https://www.twilio.com/whatsapp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Option 2: WhatsApp Cloud API (https://developers.facebook.com/docs/whatsapp)
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
# WHATSAPP_ACCESS_TOKEN=your-access-token
# WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-verify-token

# -------------------------------------------------------------------
# SMS NOTIFICATIONS (Twilio)
# -------------------------------------------------------------------
TWILIO_SMS_NUMBER=+1234567890

# -------------------------------------------------------------------
# EMAIL NOTIFICATIONS (Resend)
# -------------------------------------------------------------------
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=evisit@krg.gov.iq

# -------------------------------------------------------------------
# QR CODE SECURITY
# -------------------------------------------------------------------
# Generate a strong random string for HMAC signatures
QR_CODE_SECRET=your-qr-code-signing-secret-change-this

# -------------------------------------------------------------------
# RATE LIMITING & SECURITY
# -------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# -------------------------------------------------------------------
# FRONTEND URL (For CORS & Redirects)
# -------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000
